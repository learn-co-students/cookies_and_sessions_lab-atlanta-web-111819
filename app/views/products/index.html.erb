<body>
    <div>
        <%= form_tag('/') do %>
        <%= label_tag(:item, "Enter Product: ")%><br>
        <%= text_field_tag(:product)%><br>
        <%= submit_tag("add to cart") %>
        <% end %>
    </div>
    <div>
        <ul>
        <% cart.each do |i| %>
        <li><%= i %></li>
        <% end %>
        </ul>
    </div>
</body>